{
  "compilerOptions": {
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "module": "CommonJS",
    "target": "esnext",
    "outDir": "dist",
    "resolveJsonModule": true,
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*"
  ]
}
